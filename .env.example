# LogNog Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SECURITY (REQUIRED - Change these!)
# ===========================================
JWT_SECRET=change-this-to-a-random-string-at-least-32-chars
JWT_REFRESH_SECRET=change-this-to-another-random-string

# ===========================================
# CLOUDFLARE TUNNEL (Optional)
# ===========================================
# Get this from: Cloudflare Dashboard → Zero Trust → Networks → Tunnels → Create
# This exposes LogNog to the internet without port forwarding
CLOUDFLARE_TUNNEL_TOKEN=

# ===========================================
# AI FEATURES (Optional)
# ===========================================
# Local Ollama (runs in Docker with GPU)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2
OLLAMA_REASONING_MODEL=qwen3:30b
OLLAMA_EMBED_MODEL=nomic-embed-text

# OpenRouter (cloud AI alternative)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ===========================================
# INGESTION SETTINGS
# ===========================================
# Require API key for OTLP ingestion
OTLP_REQUIRE_AUTH=true
